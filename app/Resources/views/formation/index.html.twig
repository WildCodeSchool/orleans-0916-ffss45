{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formation list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomlong</th>
                <th>Nomcourt</th>
                <th>Categorie</th>
                <th>Descriptif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': formation.id }) }}">{{ formation.id }}</a></td>
                <td>{{ formation.nomLong }}</td>
                <td>{{ formation.nomCourt }}</td>
                {#<td>{{ formation.categorie }}</td>#}
                <td>{{ formation.descriptif }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('formation_show', { 'id': formation.id }) }}" class="btn btn-default">show</a>
                        </li>
                        <li>
                           <a href="{{ path('formation_edit', { 'id': formation.id }) }}" class="btn btn-default">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('formation_new') }}" class="btn btn-default">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
