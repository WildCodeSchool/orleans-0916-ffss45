{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Nomlong</th>
                <td>{{ formation.nomLong }}</td>
            </tr>
            <tr>
                <th>Nomcourt</th>
                <td>{{ formation.nomCourt }}</td>
            </tr>
            <tr>
                {#<th>Categorie</th>
                <td>{{ formation.categorie }}</td>#}
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ formation.descriptif }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('formation_index') }}" class="btn btn-default">Back to the list</a>
        </li>
        <li>
           <a href="{{ path('formation_edit', { 'id': formation.id }) }}" class="btn btn-default">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
          <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
