{% extends 'AdminBundle:Default:base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/admin_agenda.css')}}" rel="stylesheet">
    <link href="{{ asset('responsive-nav.css')}}" rel="stylesheet">

{% endblock %}
{% block body %}

    <nav class="menu-left">
        <header>
            <span><img src="https://placekitten.com/g/50/50" alt="Imagem Menu" class="img-circle"></span>
            <span>Name</span>
        </header>

        <ul>
            <li class="active"><a href="#"><span class="glyphicon glyphicon-dashboard"></span> Dashboard</a></li>
            <li><a href="#"><span class="glyphicon glyphicon-th-list"></span> Agenda</a></li>
            <li><a href="#"><span class="glyphicon glyphicon-tasks"></span> Formation</a></li>
            <li><a href="#"><span class="glyphicon glyphicon-globe"></span> Ev√®nements</a></li>

        </ul>
    </nav>

    <div class="content-center">
        <header>
            <div class="top">
                <ul>
                    <li><a href="#"><span class="glyphicon glyphicon-edit"></span></a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-comment"></span></a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-bell"></span></a></li>
                </ul>

                <div>
                    <a href="#"><span class="glyphicon glyphicon-log-out"></span></a>
                </div>
            </div>

        </header>

        <div class="content-body">


            <h2>Agenda</h2>
            <div class="table table-bordered">
                <thead>
                <tr>
                    <t>Id</t>
                    <th>Datededebut</th>
                    <th>Datedefin</th>
                    <th>Heurededebutam</th>
                    <th>Heuredefinam</th>
                    <th>Heurededebutpm</th>
                    <th>Heuredefinpm</th>
                    <th>Adresse</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for agenda in agendas %}
                    <tr>
                        <td><a href="{{ path('agenda_show', { 'id': agenda.id }) }}">{{ agenda.id }}</a></td>
                        <td>{% if agenda.dateDeDebut %}{{ agenda.dateDeDebut|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if agenda.dateDeFin %}{{ agenda.dateDeFin|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if agenda.heureDeDebutAm %}{{ agenda.heureDeDebutAm|date('H:i:s') }}{% endif %}</td>
                        <td>{% if agenda.heureDeFinAm %}{{ agenda.heureDeFinAm|date('H:i:s') }}{% endif %}</td>
                        <td>{% if agenda.heureDeDebutPm %}{{ agenda.heureDeDebutPm|date('H:i:s') }}{% endif %}</td>
                        <td>{% if agenda.heureDeFinPm %}{{ agenda.heureDeFinPm|date('H:i:s') }}{% endif %}</td>
                        <td>{{ agenda.adresse }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('agenda_show', { 'id': agenda.id }) }}" class="btn btn-default">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('agenda_edit', { 'id': agenda.id }) }}"class="btn btn-default">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </div>

            <ul>
                <li>
                    <a href="{{ path('agenda_new') }}" class="btn btn-default">Create a new entry</a>
                </li>
            </ul>
        </div>
    </div>


{% endblock %}

{% block javascript %}
    <script>
    $("#menu").hover(function () {
    $('body').toggleClass("active");
    });




    $('#myTab a').click(function (e) {
        e.preventDefault()
        $(this).tab('show')
    })
    </script>
{% endblock %}